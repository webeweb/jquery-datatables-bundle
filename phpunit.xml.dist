<?xml version="1.0" encoding="UTF-8"?>
<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true">
    <php>
        <env name="KERNEL_CLASS" value="WBW\Bundle\DataTablesBundle\Tests\Fixtures\TestKernel"/>
    </php>
    <filter>
        <whitelist>
            <directory>./lib</directory>
            <directory>./src</directory>
            <exclude>
                <directory>lib/bootstrap/Resources</directory>
                <directory>lib/bootstrap/Tests</directory>
                <directory>lib/common/Resources</directory>
                <directory>lib/common/Tests</directory>
                <directory>src/Resources</directory>
            </exclude>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="webeweb/datatables-bundle">
            <directory>./lib/bootstrap/Tests</directory>
            <directory>./lib/common/Tests</directory>
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
