{% extends "@WBWBootstrap/layout.html.twig" %}

{% block bootstrapStylesheets %}
    {{ parent() }}
    {% include "@WBWJQueryDataTables/assets/_stylesheets.html.twig" %}
    <style type="text/css">
        .content {
            margin: 70px 0 0;
        }
    </style>
    {% block jQueryDataTablesStylesheets %}
    {% endblock %}
{% endblock %}

{% block bootstrapTitle %}webeweb/jquery-datatables-bundle{% endblock %}

{% block bootstrapContainer %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-target="#bs-edmbundle-navbar-collapse" data-toggle="collapse" aria-expanded="false">
                    <span class="sr-only">{{ "label.toggle_navigation"|trans({}, "WBWBootstrapBundle") }}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">jQuery DataTables bundle</a>
            </div>
        </div>
    </nav>
    <section class="content">
        <div class="container-fluid">
            {% if (0 < app.session.flashbag.peekAll()|length) %}
                <div class="row clearfix">
                    <div class="{{ bootstrapGrid({"lg": 12, "md": 12, "sm": 12, "xs": 12}) }}">
                        {% include "@WBWBootstrap/layout/_flashbag.html.twig" %}
                    </div>
                </div>
            {% endif %}
            <div class="row clearfix">
                <div class="{{ bootstrapGrid({"lg": 12, "md": 12, "sm": 12, "xs": 12}) }}">
                    <div class="row clearfix">
                        {{ renderDataTables(dtWrapper) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block bootstrapJavascripts %}
    {{ parent() }}
    {% include "@WBWJQueryDataTables/assets/_javascripts.html.twig" %}
    {% block jQueryDataTablesJavascripts %}
    {% endblock %}
{% endblock %}
